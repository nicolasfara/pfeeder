{
    "name": "backend",
    "version": "0.1.0",
    "description": "Pfeeder backend API",
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "Nicolas Farabegoli",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass -w src/public/css/main.scss dist/public/css/main.css",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "async": "^3.2.0",
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-openapi-validator": "^3.16.4",
        "express-session": "^1.17.1",
        "express-validator": "^6.6.0",
        "lusca": "^1.6.1",
        "mongoose": "^5.9.22",
        "nodemailer": "^6.4.10",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "passport-unique-token": "^1.0.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/async": "^3.2.3",
        "@types/bcryptjs": "^2.4.2",
        "@types/bluebird": "^3.5.32",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.11",
        "@types/compression": "^1.7.0",
        "@types/connect-mongo": "^3.1.3",
        "@types/errorhandler": "^1.5.0",
        "@types/express": "^4.17.7",
        "@types/express-flash": "0.0.2",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^26.0.4",
        "@types/lusca": "^1.6.2",
        "@types/mongoose": "^5.7.30",
        "@types/multer": "^1.4.3",
        "@types/node": "^14.0.18",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/passport-unique-token": "^1.0.2",
        "@types/shelljs": "^0.8.8",
        "@types/supertest": "^2.0.10",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "concurrently": "^5.2.0",
        "nodemon": "^2.0.4",
        "shelljs": "^0.8.4",
        "supertest": "^4.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    }
}
